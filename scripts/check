#!/usr/bin/env python3
"""
品質チェック用スラッシュコマンド
Usage: /check [options]
"""

import sys
import subprocess
from pathlib import Path

def main():
    # プロジェクトルートで quality_check.py を実行
    script_dir = Path(__file__).resolve().parent
    project_root = script_dir.parent

    cmd = [sys.executable, "scripts/quality_check.py"] + sys.argv[1:]

    try:
        result = subprocess.run(cmd, cwd=project_root)
        sys.exit(result.returncode)
    except Exception as e:
        print(f"Error: {e}")
        sys.exit(1)

if __name__ == "__main__":
    main()
